<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="miage.projetindustriel.controller.Login">

    <Button
        android:text="Connection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/connection_button"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="105dp" />

    <Button
        android:text="Inscription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/inscription_button"
        android:layout_marginBottom="48dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/connection_button"
        android:layout_alignStart="@+id/connection_button"
        android:layout_alignRight="@+id/connection_button"
        android:layout_alignEnd="@+id/connection_button" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bienvenue !"
        android:id="@+id/title_application"
        android:textAlignment="center"
        android:textSize="24sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="56dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/password"
        android:singleLine="false"
        tools:background="@android:color/holo_blue_light"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/login"
        android:layout_alignEnd="@+id/login"
        android:layout_alignLeft="@+id/login"
        android:layout_alignStart="@+id/login"
        android:textColorLink="@android:color/holo_blue_light"
        android:hint="Password"
        android:textAlignment="center" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/login"
        android:layout_marginBottom="15dp"
        tools:background="@android:color/holo_blue_light"
        android:textColorLink="@android:color/holo_blue_light"
        android:layout_above="@+id/password"
        android:layout_centerHorizontal="true"
        android:hint="Login"
        android:textAlignment="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/login"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="38dp"
        android:id="@+id/errorMessage"
        android:textColor="@android:color/holo_red_dark"
        android:textStyle="normal|italic" />

</RelativeLayout>
